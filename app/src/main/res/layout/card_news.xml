<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_news"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_news"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/selfie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="25 million rupiah have been raised for Difable Empowering"
            app:layout_constraintEnd_toEndOf="@+id/image_news"
            app:layout_constraintStart_toStartOf="@+id/image_news"
            app:layout_constraintTop_toBottomOf="@+id/image_news"/>

        <TextView
            android:id="@+id/text_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="15 May 2018"
            app:layout_constraintBottom_toBottomOf="@+id/button_share_news"
            app:layout_constraintStart_toStartOf="@+id/text_news"
            app:layout_constraintTop_toTopOf="@+id/button_share_news"/>

        <ImageButton
            android:id="@+id/button_share_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/background_light"
            android:src="@drawable/ic_share_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/text_news"
            app:layout_constraintTop_toBottomOf="@+id/text_news"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>